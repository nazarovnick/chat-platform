{
  "swagger": "2.0",
  "info": {
    "title": "Chat service",
    "version": "1.0",
    "contact": {
      "name": "gRPC-Gateway project",
      "url": "https://github.com/grpc-ecosystem/grpc-gateway",
      "email": "none@example.com"
    },
    "license": {
      "name": "BSD 3-Clause License",
      "url": "https://github.com/grpc-ecosystem/grpc-gateway/blob/main/LICENSE"
    }
  },
  "tags": [
    {
      "name": "ChatService"
    }
  ],
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/v1/chat/messages": {
      "get": {
        "operationId": "ChatService_GetMessages",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/chatGetMessagesResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "chat_id",
            "description": "ID of the chat to retrieve messages from.",
            "in": "query",
            "required": true,
            "type": "string",
            "format": "int64"
          }
        ],
        "tags": [
          "ChatService"
        ]
      }
    },
    "/v1/chat/send": {
      "post": {
        "operationId": "ChatService_SendMessage",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/chatSendMessageResponse"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "description": "Request to send a new message.",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/chatSendMessageRequest"
            }
          }
        ],
        "tags": [
          "ChatService"
        ]
      }
    }
  },
  "definitions": {
    "chatGetMessagesResponse": {
      "type": "object",
      "properties": {
        "messages": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/chatMessage"
          },
          "description": "List of messages."
        }
      },
      "description": "Response with a list of messages."
    },
    "chatMessage": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string",
          "format": "uint64",
          "description": "Unique identifier of the message."
        },
        "chat_id": {
          "type": "string",
          "format": "int64",
          "description": "Chat ID where the message was sent."
        },
        "user_id": {
          "type": "string",
          "format": "int64",
          "description": "User ID who sent the message."
        },
        "content": {
          "type": "string",
          "description": "Content of the message."
        },
        "timestamp": {
          "type": "string",
          "format": "int64",
          "description": "Timestamp when the message was sent (Unix time)."
        }
      },
      "description": "Message represents a chat message.",
      "required": [
        "id",
        "chat_id",
        "user_id",
        "content",
        "timestamp"
      ]
    },
    "chatSendMessageRequest": {
      "type": "object",
      "properties": {
        "chat_id": {
          "type": "string",
          "format": "int64",
          "description": "ID of the chat to send the message to."
        },
        "user_id": {
          "type": "string",
          "format": "int64",
          "description": "ID of the user sending the message."
        },
        "content": {
          "type": "string",
          "description": "Content of the message."
        }
      },
      "description": "Request to send a new message.",
      "required": [
        "chat_id",
        "user_id",
        "content"
      ]
    },
    "chatSendMessageResponse": {
      "type": "object",
      "properties": {
        "message_id": {
          "type": "string",
          "format": "int64",
          "description": "ID of the newly created message."
        }
      },
      "description": "Response after a message is successfully sent.",
      "required": [
        "message_id"
      ]
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  },
  "externalDocs": {
    "description": "More about gRPC-Gateway",
    "url": "https://github.com/grpc-ecosystem/grpc-gateway"
  }
}
